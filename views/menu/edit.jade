extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Menu
			small Edit aneka menu
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Level 
			li.active Here 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Makanan dan Minuman
				.box-tools.pull-right
					button(type='button' data-widget='collapse' data-toggle='tooltip' title='collapse').btn.btn-box-tool
						i.fa.fa-minus

			.box-body
				form(role='form' method='post' action='/menus/edit/#{(id==undefined) ? data.id : id}' enctype='multipart/form-data')
					.row

						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button' data-dismiss='alert' aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button' data-dismiss='alert' aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Menu
									input(type='text' value="#{data.menu}" name='menu' placeholder='Enter Menu', autofocus).form-control
								.form-group
									label
										| Kategori
									select(type="text" name="kategori" placeholder="Masukan Kategori", required).form-control
										option(value="#{ (kategori == undefined) ? data.kategori : Kategori }") #{ (kategori == undefined) ? data.kategori : Kategori }
										option(value="Paket") Paket
										option(value="Sup") Sup
										option(value="Seafood") Seafood
										option(value="Sayur") Sayur
										option(value="Minuman") Minuman
										option(value="Snack") Snack
								.form-group
									label
										| Harga
									input(type='text' value="#{ (harga == undefined) ? data.harga : harga }" name='harga' placeholder='Enter Harga').form-control
								.form-group
									label
										| Stok
									select(type="text" name="stok" placeholder="Masukan Stok", required).form-control
										option(value="#{ (stok == undefined) ? data.stok : stok }") #{ (stok == undefined) ? data.stok : stok }
										option(value="Tersedia") Tersedia 
										option(value="Kosong") Kosong
								.form-group
									label
										| Gambar
									input(type='file' name='gambar')
							.box-footer
								input(type="hidden" name="_method" value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/menus').btn.btn-primary.pull-right
									| Back